@model CoreRazorPagesDemo.Pages.Employees.CreateModel
@{
}

<h1>Create Employee</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CreateEmployee.FirstName" class="control-label"></label>
                <input asp-for="CreateEmployee.FirstName" class="form-control" />
                <span asp-validation-for="CreateEmployee.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateEmployee.LastName" class="control-label"></label>
                <input asp-for="CreateEmployee.LastName" class="form-control" />
                <span asp-validation-for="CreateEmployee.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateEmployee.Email" class="control-label"></label>
                <input asp-for="CreateEmployee.Email" class="form-control" />
                <span asp-validation-for="CreateEmployee.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateEmployee.Gender" class="control-label"></label>
                <input asp-for="CreateEmployee.Gender" class="form-control" />
                <span asp-validation-for="CreateEmployee.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateEmployee.Salary" class="control-label"></label>
                <input asp-for="CreateEmployee.Salary" class="form-control" />
                <span asp-validation-for="CreateEmployee.Salary" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Create" class="btn btn-primary float-right" asp-page-handler="Create" />
                <a asp-page="Index" class="float-left">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}